
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" class="profile">

<head>
    <!-- important meta tags-->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Title -->
    <title>
        @ViewBag.Title Page
    </title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- Fontawesome -->
    <link rel="stylesheet" href="~/Content/css/font-awesome/css/font-awesome.min.css">

    <!-- BootStrap CSS -->
    <link rel="stylesheet" href="~/Content/css/bootstrap/bootstrap.min.css">

    <!-- Header CSS -->
    <link rel="stylesheet" href="~/Content/css/header.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/Content/css/style.css">

    <!-- Responsive CSS -->
    <link rel="stylesheet" href="~/Content/css/responsive.css">

    <!-- Paging CSS -->
    <link rel="stylesheet" href="~/Content/css/paging.css">


</head>

<body>
    <section id="_header">

        <!-- Header -->
        <header>
            <nav class="navbar navbar-fixed-top navbar-sticky ">
                <div class="container-fluid">
                    <div class="site-nav-wrapper">
                        <div class="navbar-header">
                            <!-- Mobile Menu Open Button -->
                            <span id="mobile-nav-open-btn">&#9776;</span>
                            <!-- Logo -->
                            <a class="navbar-brand sticky-logo smooth-scroll" href="#home">
                                <img class="img-responsive" src="~/Content/images/login/top-logo.png" alt="logo" />
                            </a>
                        </div>
                        <!-- Main menu -->
                        <div class="container">
                            <div class="collapse navbar-collapse">
                                <ul class="nav navbar-nav pull-right sticky">
                                    <li>@Html.ActionLink("Search Notes", "SearchNotes", "Users")</li>
                                    <li>@Html.ActionLink("Sell Your Notes", "addNotes", "Users")</li>
                                    <li>@Html.ActionLink("FAQ", "Faq", "Users")</li>
                                    <li>@Html.ActionLink("Contact Us", "ContactUs", "Users")</li>
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <li>
                                            <div class="col-md-6  col-sm-6 col-xs-5 smooth-scroll flex-container" >
                                                <a class="  dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="background-color:transparent;"><img src="~/Content/images/Add-notes/user-img.png" alt="author" class="img-circle"></a>
                                                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                                    <a class="dropdown-item" href="#">My Profile</a>
                                                    <a class="dropdown-item" href="#">My Downloads</a>
                                                    <a class="dropdown-item" href="#">My Sold Notes</a>
                                                    <a class="dropdown-item" href="#">My Rejected Notes</a>
                                                    <a class="dropdown-item" href="#">Change Password</a>
                                                    <a class="dropdown-item a-logout" href="#">LOGOUT</a>
                                                </div>
                                            </div>
                                        </li>
                                        <li>
                                            <input type="button" value="Logout" class="btn btn-primary btn-lg btn-block  text-center navbar-btn sticky-btn" onclick="location.href='@Url.Action("Logout","Users")'" />
                                        </li>

                                    }
                                    else
                                    {
                                        <li>
                                            <input type="button" value="Login" class="btn btn-primary btn-lg btn-block  text-center navbar-btn sticky-btn" onclick="location.href='@Url.Action("Login","Users")'" />
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                        <!-- Mobile Menu -->
                        <div id="mobile-nav">
                            <!-- Mobile Menu Open Button -->
                            <span id="mobile-nav-close-btn">&times;</span>
                            <div id="mobile-nav-content">
                                <ul class="nav">
                                    <li>@Html.ActionLink("Search Notes", "SearchNotes", "Users")</li>
                                    <li>@Html.ActionLink("Sell Your Notes", "AddNotes", "Users")</li>
                                    <li>@Html.ActionLink("FAQ", "Faq", "Users")</li>
                                    <li>@Html.ActionLink("Contact Us", "ContactUs", "Users")</li>
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <li>
                                            <div class="col-md-6  col-sm-6 col-xs-5 smooth-scroll flex-container">
                                                <a class="  dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="background-color:transparent;"><img src="~/Content/images/Add-notes/user-img.png" alt="author" class="img-circle"></a>
                                                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                                    <a class="dropdown-item" href="#">My Profile</a>
                                                    <a class="dropdown-item" href="#">My Downloads</a>
                                                    <a class="dropdown-item" href="#">My Sold Notes</a>
                                                    <a class="dropdown-item" href="#">My Rejected Notes</a>
                                                    <a class="dropdown-item" href="#">Change Password</a>
                                                    <a class="dropdown-item a-logout" href="#">LOGOUT</a>
                                                </div>
                                            </div>
                                        </li>
                                        <li>
                                            <input type="button" value="Logout" class="btn btn-primary btn-lg btn-block  text-center navbar-btn sticky-btn" onclick="location.href='@Url.Action("Logout","Users")'" />
                                        </li>

                                    }
                                    else
                                    {
                                        <li>
                                            <input type="button" value="Login" class="btn btn-primary btn-lg btn-block  text-center navbar-btn sticky-btn" onclick="location.href='@Url.Action("Login","Users")'" />
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>
        </header>
        <!-- Header Ends -->

        @RenderBody()
        <!-- footer -->
        <footer class="b_footer">
            <div class="container">
                <div class="flex-container j-center footer-content col-md-12 col-sm-12 col-xs-12">
                    <div class="footer-con">
                        <p>
                            Copyright &copy; TatvaSoft All rights reserved.
                        </p>
                    </div>
                    <div class="text-right">
                        <ul class="social-list">
                            <li><a href="#" class="text-center"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="#" class="text-center"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="#" class="text-center"><i class="fa fa-google-plus"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </footer>
    </section>

    <!-- JQuerry -->
    <script src="~/Scripts/js/jquery.min.js"></script>

    <!-- BootStrap JS -->
    <script src="~/Scripts/js/bootstrap/bootstrap.min.js"></script>

    <!-- Custom JS -->
    <script src="~/Scripts/js/script.js"></script>

</body>

</html>