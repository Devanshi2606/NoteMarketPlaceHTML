
@{
    ViewBag.Title = "ManageConfiguration";
    Layout = "~/Views/Shared/Admin_Header.cshtml";
}
@model NoteMarketPlace.Models.SystemConfiguration

<body>
    <br />
    <br />
    <br />
    <section id="manage-system-configuration">
        @using (Html.BeginForm("ManageConfiguration", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="basic-profile-details">
                <form>
                    <div class="container">
                        <div class="row">
                            <!-- Basic Details -->
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <h1 class="heading">Manage System Configuration</h1>
                            </div>
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <div class="col-md-6 col-sm-12 col-xs-12 data">
                                    <p>Support emails address*</p>
                                    <div class="form-group ">
                                        @Html.TextBoxFor(m => m.emailAddress, "", new { @class = "form-control name email", @id = "f-name", @placeholder = "Enter email Address" })
                                        <span class="text-danger"> @Html.ValidationMessage("emailAddress")</span>
                                        @*<input type="email" class="form-control name email" id="f-name" placeholder="Enter email address">*@
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <div class="col-md-6 col-sm-12 col-xs-12 data">
                                    <p>Support phone number*</p>
                                    <div class="form-group ">
                                        @Html.TextBoxFor(m => m.phoneNo, "", new { @class = "form-control name p-no", @id = "p-no", @placeholder = "Enter phone number" })
                                        <span class="text-danger"> @Html.ValidationMessage("phoneNo")</span>
                                        @*<input type="text" class="form-control name p-no" id="p-no" placeholder="Enter phone number">*@
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <div class="col-md-6 col-sm-12 col-xs-12 data">
                                    <p>Email Address(es) (for various events system will send notifications to these users)*</p>
                                    <div class="form-group ">
                                        @Html.TextBoxFor(m => m.adminEmails, "", new { @class = "form-control name email", @id = "email", @placeholder = "Enter email address" })
                                        <span class="text-danger"> @Html.ValidationMessage("adminEmails")</span>
                                        @*<input type="email" class="form-control email" id="email" placeholder="Enter email address">*@
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <div class="col-md-6 col-sm-12 col-xs-12 data">
                                    <p>Facebook URL*</p>
                                    <div class="form-group ">
                                        @Html.TextBoxFor(m => m.FacebookUrl, "", new { @class = "form-control name email", @id = "email", @placeholder = "Enter facebook url" })
                                        <span class="text-danger"> @Html.ValidationMessage("FacebookUrl")</span>
                                        @*<input type="email" class="form-control email" id="email" placeholder="Enter facebook url">*@
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <div class="col-md-6 col-sm-12 col-xs-12 data">
                                    <p>Twitter URL*</p>
                                    <div class="form-group ">
                                        @Html.TextBoxFor(m => m.TwitterUrl, "", new { @class = "form-control name email", @id = "email", @placeholder = "Enter twitter url" })
                                        <span class="text-danger"> @Html.ValidationMessage("TwitterUrl")</span>
                                        @*<input type="email" class="form-control email" id="email" placeholder="Enter twitter url">*@
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <div class="col-md-6 col-sm-12 col-xs-12 data">
                                    <p>LinkedIn URL*</p>
                                    <div class="form-group ">
                                        @Html.TextBoxFor(m => m.LinkedInUrl, "", new { @class = "form-control name email", @id = "email", @placeholder = "Enter linkedin url" })
                                        <span class="text-danger"> @Html.ValidationMessage("LinkedInUrl")</span>
                                        @*<input type="email" class="form-control email" id="email" placeholder="Enter linkedin url">*@
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <div class="col-md-6 col-sm-12 col-xs-12 data">
                                    <p>Default image for notes(if seller do not upload)</p>
                                    <div class="form-group flex-container">
                                        <label for="uploadPicture" id="upload-img" class="form-control form-control-upload  upload-img">
                                            @Html.TextBoxFor(m => m.uploadPictureGet, "", new { @class = "form-control name hidden" })
                                            <input type="file" name="uploadPicture" id="uploadPicture" style="display:none; visibility:hidden;" onchange="getname(this.value,this.name);" value=@ViewBag.uploadname />
                                            <p class="display-note-picture"></p>
                                            <figure class="upload-note-picture">
                                                <img src="~/Content/images/User-Profile/upload.png" class="field-upload-icon" alt="upload icon" style="z-index:1;" />
                                                <figcaption class="field-upload-icon-text">Upload a picture</figcaption>
                                            </figure>
                                        </label>
                                        @*<input type="text" class="form-control form-control-upload  upload-img" id="upload-img">
                                        <span>
                                            <figure>
                                                <img src="../../images/User-Profile/upload.png" class="field-upload-icon" alt="upload icon">
                                                <figcaption class="field-upload-icon-text">Upload a picture</figcaption>
                                            </figure>
                                        </span>*@
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <div class="col-md-6 col-sm-12 col-xs-12 data">
                                    <p>Default profile picture(if seller do not upload)</p>
                                    <div class="form-group flex-container">
                                        <label for="profilePicture" id="upload-img" class="form-control form-control-upload  upload-img">
                                            @Html.TextBoxFor(m => m.profilePictureGet, "", new { @class = "form-control name hidden" })
                                            <input type="file" name="profilePicture" id="profilePicture" style="display:none; visibility:hidden;" onchange="getname(this.value,this.name);" value=@ViewBag.profilename />
                                            <p class="display-picture" style="margin-top:0%;"></p>
                                            <figure class="upload-picture" style="margin-top:18%;">
                                                <img src="~/Content/images/User-Profile/upload.png" class="field-upload-icon" alt="upload icon" style="z-index:1;" />
                                                <figcaption class="field-upload-icon-text">Upload a picture</figcaption>
                                            </figure>
                                        </label>
                                        @*<input type="text" class="form-control form-control-upload  upload-img" id="upload-img">
                                        <span>
                                            <figure>
                                                <img src="../../images/User-Profile/upload.png" class="field-upload-icon" alt="upload icon">
                                                <figcaption class="field-upload-icon-text">Upload a picture</figcaption>
                                            </figure>
                                        </span>*@
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2 col-sm-2 col-xs-7">
                                <button type="submit" class="btn btn-primary btn-lg btn-block text-uppercase text-center btn-submit">
                                    Submit
                                </button>
                            </div>

                        </div>
                    </div>
                </form>
            </div>
        }
        </section>
</body>
@section Scripts{
    <script type="text/javascript">
        $(function () {
            showHideNav();
            $(window).scroll(function () {
                //show hide nav on windows scroll
                showHideNav();
            });
            function showHideNav() {
                if ($(window).scrollTop() > -50) {
                    //show white nav
                    $("nav").addClass("white-nav-top");
                    $("nav").css("box-shadow", "0 0 0 0 ");
                    //show dark logo
                    $(".sticky-logo img").attr("src", "../../Content/images/login/logo.png");
                    //Show back-to-top Button
                }
                if ($(window).scrollTop() > 50) {
                    $("nav").css("box-shadow", "0 8px 6px -9px #999 ");
                }
            }
        });
    </script>
    <script type="text/javascript">
        $(window).on("load", function () {
            if ($("#profilePicture").attr("value") != null) {
                $(".display-picture").html($("#profilePicture").attr("value"));
                $(".upload-picture").hide();
            }
            if ($("#uploadPicture").attr("value") != null) {
                $(".display-note-picture").html($("#uploadPicture").attr("value"));
                $(".upload-note-picture").hide();
            }
        });
    </script>
    <script type="text/javascript">
        function getname(file_name, class_name) {
            file_name = file_name.replace(/^.*\\/, "");
            if (class_name == "profilePicture") {
                $(".display-picture").html(file_name);
                $(".upload-picture").hide();
                //ViewBag.picture=file_name;
            }
            if (class_name == "uploadPicture") {
                $(".display-note-picture").html(file_name);
                $(".upload-note-picture").hide();
                //ViewBag.picture=file_name;
            }
        }
    </script>
}