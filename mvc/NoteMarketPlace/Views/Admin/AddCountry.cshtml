
@{
    ViewBag.Title = "AddCountry";
    Layout = "~/Views/Shared/Admin_Header.cshtml";
}

@model NoteMarketPlace.Models.Note_Country
<body>
    <br />
    <br />
    <br />
    <section id="add-country">
        @using (Html.BeginForm("AddCountry", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="basic-profile-details">
                <form>
                    <div class="container">
                        <div class="row">
                            <!-- Basic Details -->
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <h1 class="heading">Add Country</h1>
                            </div>
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <div class="col-md-6 col-sm-6 col-xs-12 data">
                                    <p>Country Name*</p>
                                    <div class="form-group ">
                                        @*<input type="text" class="form-control name category-name" id="category-name" placeholder="Enter your Category name">*@
                                        @Html.TextBoxFor(m=>m.countryID, "", new { @class = "form-control name hidden" })
                                        @Html.TextBoxFor(m => m.countryName, "", new { @class = "form-control name country-name", @id = "country-name", @placeholder = "Enter your Country name" })
                                        <span class="text-danger"> @Html.ValidationMessage("countryName")</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <div class="col-md-6 col-sm-6 col-xs-12 data">
                                    <p>Country Code*</p>
                                    <div class="form-group ">
                                        @*<textarea class="form-control" id="message" placeholder="Enter your description"></textarea>*@
                                        @Html.TextBoxFor(m => m.countrycode, "", new { @class = "form-control name country-code", @id = "country-code", @placeholder = "Enter Country code" })
                                        <span class="text-danger"> @Html.ValidationMessage("countrycode")</span>

                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2 col-sm-2 col-xs-7">
                                <button type="submit" class="btn btn-primary btn-lg btn-block text-uppercase text-center btn-submit">
                                    Submit
                                </button>
                            </div>

                        </div>
                    </div>
                </form>
            </div>
        }
    </section>
    @section Scripts{
        <script type="text/javascript">
            $(function () {
                showHideNav();
                $(window).scroll(function () {
                //show hide nav on windows scroll
                showHideNav();
                });
                function showHideNav() {
                    if ($(window).scrollTop() > -50) {
                    //show white nav
                        $("nav").addClass("white-nav-top");
                        $("nav").css("box-shadow", "0 0 0 0 ");
                     //show dark logo
                        $(".sticky-logo img").attr("src", "../../Content/images/login/logo.png");
                    //Show back-to-top Button
                    }
                    if ($(window).scrollTop() > 50) {
                    $("nav").css("box-shadow", "0 8px 6px -9px #999 ");
                    }
                }
            });
        </script>
    }
</body>

